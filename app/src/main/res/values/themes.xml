<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Gym_manager" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your light theme here. -->
        <item name="android:colorPrimary">@color/green</item>
        <item name="statusBarBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
    </style>
    <style name="Theme.Gym_manager" parent="Base.Theme.Gym_manager" />

    <style name="AppTheme.TransparentStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>
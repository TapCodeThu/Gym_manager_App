<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activitys.HistorySellActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green"
        android:id="@+id/layout_title">
        <EditText
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintEnd_toStartOf="@id/icon_search"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingHorizontal="10dp"
            android:id="@+id/searchEdt"
            android:visibility="gone"
            android:hint="Nhập tên hoặc số điện thoại..."
            android:background="@drawable/custom_search_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="50dp"/>
        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_marginStart="16dp"
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/baseline_search_24"
            android:layout_marginEnd="16dp"
            android:id="@+id/icon_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Lịch sử bán"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:id="@+id/tv_labels_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_below="@id/layout_title"
        android:layout_alignParentStart="true"
        android:hint="Ngày bắt đầu"
        android:gravity="center"
        android:background="@drawable/custom_edt"
        android:layout_marginBottom="5dp"
        android:id="@+id/startDay"
        android:layout_margin="2dp"
        android:padding="10dp"
        android:layout_width="150dp"
        android:layout_height="50dp"/>
    <TextView
        android:layout_below="@id/layout_title"
        android:layout_toEndOf="@id/startDay"
        android:hint="Ngày kết thúc"
        android:gravity="center"
        android:background="@drawable/custom_edt"
        android:layout_marginBottom="5dp"
        android:id="@+id/endDay"
        android:layout_margin="2dp"
        android:layout_width="150dp"
        android:padding="10dp"
        android:layout_height="50dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/custom_btn"
        android:layout_toEndOf="@id/endDay"
        android:layout_below="@id/layout_title"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="2dp"
        android:text="Tìm"
        android:id="@+id/btn_find"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>
    <TextView
        android:layout_below="@id/layout_title"
        android:text="Danh sách trống"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_empty"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/startDay"
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/layout_doanhthu"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:background="@color/white"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Số tiền: "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="0"
            android:id="@+id/tv_sum"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/fab"
        android:text="Xóa toàn bộ lịch sử"
        app:iconTint="@color/white"
        app:icon="@drawable/baseline_delete_24"
        android:textColor="@color/white"
        android:backgroundTint="@color/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
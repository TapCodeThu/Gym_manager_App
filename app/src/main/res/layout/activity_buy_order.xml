<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activitys.BuyOrderActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imageView"
            android:src="@drawable/noimage"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="280dp"/>
        <ImageView
            android:src="@drawable/baseline_back_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Name Product"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_name_product"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Gia: 550 000 d"
            app:layout_constraintTop_toBottomOf="@id/tv_name_product"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="#FF5252"
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Số lượng"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_price"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/lable_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            app:layout_constraintTop_toBottomOf="@id/lable_quantity"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            android:src="@drawable/baseline_indeterminate_check_box_24"
            android:layout_marginTop="20dp"
            android:id="@+id/iv_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="1"
            app:layout_constraintTop_toBottomOf="@id/lable_quantity"
            app:layout_constraintStart_toEndOf="@id/iv_minus"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            app:layout_constraintTop_toBottomOf="@id/lable_quantity"
            app:layout_constraintStart_toEndOf="@id/tv_quantity"
            android:layout_marginStart="20dp"
            android:src="@drawable/baseline_add_box_24"
            android:layout_marginTop="20dp"
            android:id="@+id/iv_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            app:layout_constraintTop_toBottomOf="@id/tv_quantity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            android:hint="Họ và tên khách hàng"
            android:id="@+id/edt_name_customer"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            app:layout_constraintTop_toBottomOf="@id/edt_name_customer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            android:hint="Số điện thoại khách hàng"
            android:inputType="phone"
            android:id="@+id/edt_phone_customer"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            app:layout_constraintTop_toBottomOf="@id/edt_phone_customer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            android:hint="Địa chỉ khách hàng"
            android:id="@+id/edt_address_customer"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/edt_address_customer"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Tổng tiền: "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:id="@+id/label_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/edt_address_customer"
           app:layout_constraintEnd_toEndOf="parent"
            android:text="00 000d"
            android:textColor="#FF6E40"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/tv_sum"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="italic"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/grey"
            android:text="Hình thức thanh toán tiền mặt tại phòng tập"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_alignParentStart="true"
       android:layout_alignParentEnd="true"
       android:backgroundTint="#FF5252"
       android:id="@+id/btn_buy"
       android:layout_alignParentBottom="true"
       android:background="@drawable/custom_btn"
       android:layout_marginHorizontal="16dp"
       android:layout_marginBottom="10dp"
       android:layout_height="50dp">
       <TextView
           android:text="Xác nhận mua hàng"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:textSize="16sp"
           android:id="@+id/tv_btn"
           android:textColor="@color/black"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <ProgressBar
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:indeterminateTint="@color/white"
           android:visibility="gone"
           android:id="@+id/progress"
           android:layout_width="30dp"
           android:layout_height="30dp"/>

   </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>